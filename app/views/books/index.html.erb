<div class="container">
	<div class="row">
		<div class="col-lg-4" style="background-color: orange" >
			<%= render "users/side", user: @user, book: @book %>
		</div>
		<div class="col-lg-8">
			<h1>Books</h1>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion<th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
