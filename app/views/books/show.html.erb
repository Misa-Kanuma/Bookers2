<div class="container">
	<div class="row">
		<div class="col-xs-3" >
			<%= render "users/side", user: @user, book: @newbook %>
		</div>
		<div class="col-xs-9">
			<h1>Book detail</h1>
				<table class="table table-hover">
					<tr>
						<td><%= link_to user_path(@book.user) do %>
								<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
								<%= @book.user.name %>
							<% end %>
						</td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
						<
						<% if @user == current_user %>
							<td><%= link_to "Edit", edit_book_path %><td>
							<td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
						<% end %>
					</tr>
				</table>
		</div>
	</div>
</div>