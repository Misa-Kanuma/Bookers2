<h1>Editing Book</h1>
<% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
<%= form_for(@book) do |book| %>

<%= book.label :Title %>
<%= book.text_field :title %><br>

<%= book.label :Opinion %><br>
<%= book.text_area :body %><br>

<%= book.submit "Update Book", class: "btn btn-primary" %>
<% end %>

<%= link_to "Show", book_path %>
<%= link_to "Back", books_path %>