<h1>User info</h1>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
	<table class="table table">
		<tr>
			<th>name</th>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td><%= user.introduction %></td>
		</tr>
	</table>

<%= link_to "", edit_user_path(user.id),class: "btn btn-default col-xs-12 glyphicon glyphicon-wrench edit_user_19651"%>

<h1>New book</h1>
<%= form_for(book) do |book| %>
	<%= book.label :Title%><br>
	<%= book.text_field :title %><br>
	<%= book.label :Opinion %><br>
	<%= book.text_area :body %><br>
	<%= book.submit "Create Book", class: "btn btn-primary" %>
<% end %>
