<div class="container">
	<div class="row">
		<div class="col-lg-4" style="background-color: orange" >
			<%= render "side", user: @user, book: @newbook %>
		</div>
		<div class="col-lg-8">
			<h1>Users</h1>
			<table class="table table-table">
				<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th><th>
				</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
							<td><%= user.name %></td>
							<td><%= link_to "show", user_path(user.id) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

