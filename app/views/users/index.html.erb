<h1>Users</h1>

<table>
<thead>
	<tr>
		<th>name</th>
		<th><th>
	</tr>
	</thead>
	<tr>
		<% @users.each do |users| %>
	<tbody>
		<td><%= users.name %></td>
		<td><%= link_to "show", user_path(users.id) %></td>
	</tbody>
</tr>
<% end %>
</table>

<h1>New book</h1>
<%= form_for(Book.new, url: '/books') do |book| %>
	<%= book.label :Title%><br>
	<%= book.text_field :title %><br>
	<%= book.label :Opinion %><br>
	<%= book.text_area :body %><br>

	<%= book.submit "Create Book" %>
	<% end %>